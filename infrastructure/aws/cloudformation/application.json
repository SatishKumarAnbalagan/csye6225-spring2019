{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
       "keyname":{
           "Type":"String"
       },
       "AmiId":{
         "Type":"String"
       },
       "NameTag":{
           "Type":"String"
       }
    },
    "Resources": {
        "ec2instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {"Ref":"AmiId"},
                "InstanceType": "t2.micro",
                "KeyName": {
                    "Ref": "keyname"
                },
                "SubnetId" :{"Fn::ImportValue":"csye6225-cloud-Networking-web-subnet"},
                "IamInstanceProfile":"CodeDeployEC2ServiceRoleProfile",
                "SecurityGroupIds": [
                    {
                        "Ref": "webappsecuritygroup"
                    }
                ],
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "VolumeSize": 20,
                            "DeleteOnTermination": "true",
                            "VolumeType": "gp2"
                        }
                    }
                ],
                "Tags" : [ {"Key" : "Name", "Value" : {"Ref" : "NameTag"}} ],
                "UserData":{
                    "Fn::Base64":{
                        "Fn::Join":[
                            "",
                            [
                                "#!/bin/bash -xe \n",
                                "sudo yum update -y \n",
                                "sudo yum install java-1.8.0-openjdk -y \n",
                                "sudo yum install java-1.8.0-openjdk-devel -y \n",
                                "sudo yum install ruby -y \n",
                                "sudo yum install wget -y \n",
                                "cd /home/centos \n",
                                "wget https://aws-codedeploy-us-east-1.s3.amazonaws.com/latest/install \n",
                                "chmod +x ./install \n",
                                "sudo ./install auto \n",
                                "sudo service codedeploy-agent start \n",
                                "groupadd tomcat \n",
                                "sudo useradd -M -s /bin/nologin -g tomcat -d /opt/tomcat tomcat \n",
                                "cd ~ \n",
                                "sudo wget https://www-eu.apache.org/dist/tomcat/tomcat-8/v8.5.37/bin/apache-tomcat-8.5.37.tar.gz \n",
                                "sudo mkdir /opt/tomcat \n",
                                "sudo tar xvf apache-tomcat-8*tar.gz -C /opt/tomcat --strip-components=1 \n",
                                "cd /opt/tomcat \n",
                                "sudo chgrp -R tomcat /opt/tomcat \n",
                                "sudo chmod -R g+r conf \n",
                                "sudo chmod g+x conf \n",
                                "sudo chown -R tomcat webapps/ work/ temp/ logs/ \n",
				"cd /opt && sudo chown -R tomcat tomcat/ \n",
                                "cd /etc/systemd/system \n",
                                "touch tomcat.service \n",
                                "echo '[Unit]' > tomcat.service \n",
                                "echo 'Description=Apache Tomcat Web Application Container' >> tomcat.service \n",
                                "echo 'After=syslog.target network.target' >> tomcat.service \n",
                                "echo '[Service]' >> tomcat.service \n",
                                "echo 'Type=forking' >> tomcat.service \n",
                                "echo 'Environment=JAVA_HOME=/usr/lib/jvm/jre' >> tomcat.service \n",
                                "echo 'Environment=CATALINA_PID=/opt/tomcat/temp/tomcat.pid' >> tomcat.service \n",
                                "echo 'Environment=CATALINA_HOME=/opt/tomcat' >> tomcat.service \n",
                                "echo 'Environment=CATALINA_BASE=/opt/tomcat' >> tomcat.service \n",
                                "echo 'Environment=\"CATALINA_OPTS=-Xms512M -Xmx1024M -server -XX:+UseParallelGC\"' >> tomcat.service \n",
                                "echo 'Environment=\"JAVA_OPTS=-Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom\"' >> tomcat.service \n",
                                "echo 'ExecStart=/opt/tomcat/bin/startup.sh' >> tomcat.service \n",
                                "echo 'ExecStop=sudo /bin/kill -15 $MAINPID' >> tomcat.service \n",
                                "echo 'User=tomcat' >> tomcat.service \n",
                                "echo 'Group=tomcat' >> tomcat.service \n",
                                "echo 'UMask=0007' >> tomcat.service \n",
                                "echo 'RestartSec=10' >> tomcat.service \n",
                                "echo 'Restart=always' >> tomcat.service \n",
                                "echo '[Install]' >> tomcat.service \n",
                                "echo 'WantedBy=multi-user.target' >> tomcat.service \n",
                                "sudo systemctl daemon-reload \n",
                                "sudo systemctl start tomcat \n",
                                "sudo echo DBCreationType=update >> /home/centos/.bash_profile \n",
                                "sudo echo export DBCreationType >> /home/centos/.bash_profile \n",
                                "sudo echo username=csye6225master >> /home/centos/.bash_profile \n",
                                "sudo echo export username >> /home/centos/.bash_profile \n",
                                "sudo echo password=csye6225password >> /home/centos/.bash_profile \n",
                                "sudo echo export password >> /home/centos/.bash_profile \n",
                                "sudo echo profiletype=dev >> /home/centos/.bash_profile \n",
                                "sudo echo export profiletype >> /home/centos/.bash_profile \n",
                                {
                                    "Fn::Join":[
                                        "",
                                        [
                                            "echo awsRDS=jdbc:mysql://",
                                            {
                                                "Fn::GetAtt":[
                                                    "rdsinstance","Endpoint.Address"
                                                ]
                                            },
                                            ":3306/csye6225 >> /home/centos/.bash_profile \n"
                                        ]
                                    ]
                                },
                                "sudo echo export awsRDS >> /home/centos/.bash_profile \n",
                                "sudo echo bucketName=csye6225-spring2019-gadhiyah.me.csye6225.com >> /home/centos/.bash_profile \n",
                                "sudo echo export bucketName >> /home/centos/.bash_profile \n",
                                "sudo echo endpointUrl=https://s3.us-east-1.amazonaws.com/ >> /home/centos/.bash_profile \n",
                                "sudo echo export endpointUrl >> /home/centos/.bash_profile \n",
                                "source /home/centos/.bash_profile \n",
                                "sudo service tomcat restart \n"
                            ]
                        ]
                    }
                }
            }
        },
        "dbsubnetgroup":{
            "Type":"AWS::RDS::DBSubnetGroup",
            "Properties":{
                "DBSubnetGroupDescription" : "Subnet description of db subnets",
                "SubnetIds":[{"Fn::ImportValue":"csye6225-cloud-Networking-db-subnet1Id"},
                  {"Fn::ImportValue":"csye6225-cloud-Networking-db-subnet2Id"}]
            }
        },
        "webappsecuritygroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId":{"Fn::ImportValue":"csye6225-cloud-Networking-VPC-Id"},
                "GroupDescription" : "Security group for web server",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 443,
                        "ToPort": 443,
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        },
        "dbsecuritygroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId":{"Fn::ImportValue":"csye6225-cloud-Networking-VPC-Id"},
                "GroupDescription" : "Ec2 security group for DB",
                "SecurityGroupIngress": [
                    {
                        "SourceSecurityGroupId": {
                            "Ref": "webappsecuritygroup"
                        },
                        "FromPort": 3306,
                        "IpProtocol": "tcp",
                        "ToPort": 3306
                    }
                ]
            }
        },
        "tabel1": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput":{
                    "ReadCapacityUnits" : 10,
                    "WriteCapacityUnits" : 5
                },
                "TableName": "csye6225"
            }
        },
        "rdsinstance":{
            "Type":"AWS::RDS::DBInstance",
            "Properties":{
                "DBInstanceClass" : "db.t2.medium",
                "AllocatedStorage" : "20",
                "Engine" : "MySQL",
                "MultiAZ" : "false",
                "DBInstanceIdentifier" : "csye6225-Spring2018",
                "MasterUsername" : "csye6225master",
                "MasterUserPassword" : "csye6225password",
                "DBSubnetGroupName" : {"Ref": "dbsubnetgroup"},
                "PubliclyAccessible" : true,
                "DBName" : "csye6225",
                "Port":"3306",
                "VPCSecurityGroups" : [ {"Ref": "dbsecuritygroup"}],
                "StorageType" : "gp2"
            }
        }
    }
}









